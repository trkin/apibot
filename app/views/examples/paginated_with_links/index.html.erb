<%
    breadcrumb 'Books': nil
%>
<div class='row row-cols-1 row-cols-md-3'>
  <% @books.each do |book| %>
    <div class='col mb-4'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-title'>
            <%= link_to book.title, paginated_with_links_book_path(book) %>
          </h5>
          <p class='card-text'><%= book.description %></p>
          <p class='card-text'><small class='text-muted'><%= pluralize book.no_of_likes, 'like' %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class='d-flex justify-content-end'>
  <%= paginate @books, theme: 'twitter-bootstrap-4' %>
</div>
